    function CreateTime(dateElement, timeElement, dayElement) {
        var weekday = new Array(7);
        weekday[0]=  "Sunday";
        weekday[1] = "Monday";
        weekday[2] = "Tuesday";
        weekday[3] = "Wednesday";
        weekday[4] = "Thursday";
        weekday[5] = "Friday";
        weekday[6] = "Saturday";
        window.setInterval(function() {
            var currentdate = new Date(); 
            var day = currentdate.getDay();
            var date = currentdate.getDate() + "/" + (currentdate.getMonth()+1)  + "/" + currentdate.getFullYear()                  
            var time = currentdate.getHours() + ":" + currentdate.getMinutes() + ":" + currentdate.getSeconds();
            dateElement.innerHTML = date;
            timeElement.innerHTML = time;
            dayElement.innerHTML = weekday[day];
        }, 1000);
    }
    
    function loadNotifications() {
        var xhr = new XMLHttpRequest();

        xhr.onreadystatechange = function () {
            if(xhr.readyState === 4) {
                console.log(this.responseText);
                if(this.responseText !== 'noNew') {
                    notificationDiv = document.getElementById("noti");
                    console.log(notificationDiv);
                    notificationDiv.style.display = 'inline-block';  
                    notificationDiv.innerHTML = this.responseText;
                }
            }
        };

        xhr.open("get","<?=$this->baseUrl()?>/Ajax/get-<?= ucfirst($userType) ?>-Notification-Num");
        xhr.send();
    }
    
